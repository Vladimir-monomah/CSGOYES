<div class="container-fluid game-bg-container">
    <div class="row">
      <div class="col-xs-12 game-bg"></div>
    </div>
  </div>
  <div class="container game-gg">
    <div class="row">
      <div class="col-lg-4">
        <img src="[xfvalue_img]" alt="{title}" class="game-cover">
      </div>
      <div class="col-lg-8 game-game">
        <div class="game-names">
          
          <div class="game-names-name">{title}</div>
            <div class="game-content">
              <div class="game-info">
                <div class="boxer">
                  <div class="box-row">
                    <div class="box box-label"><b>Тип товара</b></div>
                    <div class="box">[xfvalue_key]</div>
                  </div>
                  <div class="box-row">
                    <div class="box box-label"><b>Активация</b></div>
                    <div class="box"><img style="padding-top: 8px;" src="{THEME}/img/[xfvalue_tip]-icon.png" class="game-activate-icon"> [xfvalue_tip]</div>
                  </div>
				  
                </div>
                <div class="game-description">
                  <div>
                    <b>Описание</b>
                  </div>
                  <div class="game-description-text">{full-story}</div>
                </div>
              </div>
              <div class="game-buy">

                
                <div class="game-buy-price">
                  <span class="game-buy-actual-price">[xfvalue_price] ₽</span>
                </div>

                
                <div class="game-buy-propertys">
                  <div class="game-in-stock">В наличии</div>
                  <div class="game-in-delivery">Моментальная доставка</div>
                  <div class="game-in-guarantee">100% Гарантия</div>
                </div>
                <a href="[xfvalue_link]" class="game-buy-btn" target="_blank">
                  <div class="game-buy-btn-cart"></div>Купить</a>
              </div>
              
            </div>
          </div>
        </div>
      </div>
  </div>